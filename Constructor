class Xyz{
    String language;
    Xyz(){
        this("Java");   // we can use this keyword to call another constructor and this should be first line in the constructor
    }
    Xyz(String language){
        this.language = language;
    }
    void display(){
        System.out.println(language);
    }
}

public class Main
{
	public static void main(String[] args) {
		Xyz a = new Xyz();
		a.display();
		Xyz b = new Xyz("C Programming");
		b.display();
	}
}
